
index_reference = {
   exec "bwa-0.7.10-r789 index $REFERENCE"
   forward input
}

align = {
   exec "bwa-0.7.10-r789 mem -t $THREADS -x pacbio $REFERENCE $input > $output.sam"
}

sort = {
   exec "samtools view -bS $input | samtools sort -@ $THREADS - $output.bam.prefix"
}

entrypoint = segment {
   index_reference + align + sort
}
